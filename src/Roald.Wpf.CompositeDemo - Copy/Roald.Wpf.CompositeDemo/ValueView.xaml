             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300" x:ClassModifier="internal">


    <Controls:TextBox xmlns:Controls="clr-namespace:System.Windows.Controls;assembly=PresentationFramework" Name="ValueTextBox" Text="{Binding Value, ValidatesOnExceptions=True}">
    </Controls:TextBox>
